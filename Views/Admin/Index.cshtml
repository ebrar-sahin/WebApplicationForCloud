@using Microsoft.AspNetCore.Identity
@using WebApplication1.Areas.Identity.Data
@model List<WebApplication1User>

@{
    ViewData["Title"] = "Management user";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>👥 User List</h2>
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-warning fw-bold">+ Add</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="p-3">Email / User Name</th>
                        <th class="p-3">ID</th>
                        <th class="p-3 text-end"> Log </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="p-3">@user.Email</td>
                            <td class="p-3"><small class="text-muted">@user.Id</small></td>
                            <td class="p-3 text-end">
                                @if (User.Identity.Name != user.UserName)
                                {
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure, Deleting this user?');">
                                        <button type="submit" class="btn btn-sm btn-danger">🗑️ Delete</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active Account (You)</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>