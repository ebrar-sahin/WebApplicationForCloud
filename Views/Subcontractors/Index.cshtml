@model IEnumerable<WebApplication1.Models.Subcontractor>
@{
    ViewData["Title"] = "Tedarikçiler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>🚚 Tedarikçi Firmalar</h2>
        <a asp-action="Create" class="btn btn-primary">+ Yeni Firma Ekle</a>
    </div>

    <table class="table table-hover shadow-sm bg-white rounded">
        <thead class="table-dark">
            <tr>
                <th>Firma Adı</th>
                <th>E-Posta</th>
                <th>Şehir/Adres</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.SubcontractorId" method="post" onsubmit="return confirm('Silmek istediğine emin misin?');">
                            <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>